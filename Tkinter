import tkinter as tk
def saludar():
    nombre = entrada_nombre.get()
    edad = entrada_edad.get()
    etiqueta_resultado.config(text=f"Hola {nombre}, tú tienes {edad} años")
ventana = tk.Tk()
ventana.title("Mi primera app gráfica")
ventana.geometry("410x190")
ventana.configure(bg="#A0E7E5")
etiqueta1 = tk.Label(ventana, text="Ingresa tu nombre:", bg="#A0E7E5")
etiqueta1.pack()
entrada_nombre = tk.Entry(ventana)
entrada_nombre.pack()
etiqueta2 = tk.Label(ventana, text="Ingresa tu edad:", bg="#A0E7E5")
etiqueta2.pack()
entrada_edad = tk.Entry(ventana)
entrada_edad.pack()
boton = tk.Button(ventana, text="Mostrar saludo", command=saludar)
boton.pack()
etiqueta_resultado = tk.Label(ventana, text="", bg="#A0E7E5")
etiqueta_resultado.pack()
etiqueta_autor = tk.Label(
    ventana,
    text="Hecho por Zacapantzi Aguilar Angela Merary", bg="#A0E7E5", fg="#555555")
etiqueta_autor.pack(pady=10)
ventana.mainloop()
